<% @post.tags.build %>

<%= form_for @post do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :Заголовок %><br />
    <%= f.text_field :title %>
  </div>
<div class="field">
 <%= f.label :Текст %><br />
 <%= f.text_area :content %>
</div>

<div class="field">
 <%= f.label :"Метки через пробел" %><br />
 <%= f.text_field :tag_names %>
</div>


<div class="actions">
<%= f.submit "Создать" %>
  </div>
<% end %>


